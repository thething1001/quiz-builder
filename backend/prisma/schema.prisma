generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  questions Question[]
  createdAt DateTime   @default(now())
}

model Question {
  id        String     @id @default(uuid())
  text      String
  type      QuestionType
  options   String[]   
  correct   String[]   
  quiz      Quiz       @relation(fields: [quizId], references: [id])
  quizId    String
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}
